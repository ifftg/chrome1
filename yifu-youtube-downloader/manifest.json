{
  "manifest_version": 3,
  "name": "易弗YouTube视频下载",
  "version": "1.0",
  "description": "一个简单的YouTube视频下载插件，支持解析视频信息和多种格式下载。",
  "permissions": [
    "downloads",
    "storage",
    "notifications",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.googlevideo.com/*",
    "*://*.ytimg.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "易弗YouTube视频下载",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}